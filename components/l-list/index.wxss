.list {
  margin-bottom: 30rpx;
  position: relative;
}

.list-title-container {
  font-size: 40rpx;
  line-height: 68rpx;
  font-weight: bold;
  padding-left: 40rpx;
  padding-right: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  padding-top: 36rpx;
}

.list-title {
  flex: 3;
}

.list-action {
  flex: 1;
  font-size: 36rpx;
  line-height: 48rpx;
}

.list-disabled {
  color: #999;
}

.list-disabled-mask {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 1;
}
