/* pages/tabBar/gwc/gwc.wxss */

.waterfall {
  column-count: 2;
  column-gap: 0;
  padding: 20rpx;
}

.item {
  box-sizing: border-box;
  break-inside: avoid;
  padding: 20rpx;
}

.item-content {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.item-content image {
  width: 100%;
  height: auto;
}

.da-news {
  padding: 0 40rpx;
}

.da-news-top {
  display: flex;
  padding: 40rpx 0;
  border-bottom: 1rpx solid #f1f1f1;
}

.da-news-top .news-top-content {
  display: flex;
  flex-direction: column;
}

.da-news-top image {
  width: 200rpx;
  height: 170rpx;
  flex: none;
  border-radius: 10rpx;
  margin-right: 38rpx;
}

.da-tips {
  padding-top: 40rpx;
}

.da-bottom {
  color: #999;
  font-size: 32rpx;
  padding-top: 20rpx;
}

.prepend-warp {
  display: flex;
  justify-content: flex-start;
}

.item-name {
  text-align: center;
}

.user-image, .user-image image {
  width: 100rpx;
  height: 100rpx;
  overflow: hidden;
  display: block;
  margin-right: 20rpx;
  border-radius: 50%;
}

.prepend-warp .user-info .title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.prepend-warp .user-info .tips {
  font-size: 28rpx;
  color: #999;
}

.append {
  width: 60px;
  height: 28px;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  border-radius: 10px;
  background-color: #ff2742;
}

.follow {
  background-color: #eee;
}
