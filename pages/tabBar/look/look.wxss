/* pages/tabBar/gwc/gwc.wxss */

.waterfall {
  column-count: 2;
  column-gap: 0;
  padding: 20rpx;
}

.item {
  box-sizing: border-box;
  break-inside: avoid;
  padding: 20rpx;
}

.item-content {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.item-content image{
  width: 100%;
  height: auto;
}

.da-news{
  padding: 0 40rpx;
}

 .da-news-top {
  display: flex;
  padding: 40rpx 0;
  border-bottom: 1rpx solid #f1f1f1;
}

.da-news-top .news-top-content {
  display: flex;
  flex-direction: column;
}

.da-news-top image {
  width: 200rpx;
  height: 170rpx;
  flex: none;
  border-radius: 10rpx;
  margin-right: 38rpx;
}

.da-tips{
  padding-top: 40rpx;
}

.da-bottom{
  color: #999;
  font-size: 32rpx;
  padding-top: 20rpx;
}

.item-name{
  text-align: center;
}